                     , containers
                     , microlens-platform
                     , mtl
                     , vector


test-suite aoc-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  default-language:    Haskell2010
  ghc-options:         -Wall
  build-depends:       base >= 4.7 && < 5
                     , aoc
                     , hspec
                     , QuickCheck
